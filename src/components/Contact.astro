---
import { Mail, Phone, MapPin, Send } from 'lucide-react';
---

<section id="contact" class="py-20 bg-black/95">
  <div class="container mx-auto px-6">
    <h2 class="text-3xl font-bold text-center text-white mb-16">
      Contacta <span class="text-primary">Conmigo</span>
    </h2>
    
    <div class="grid md:grid-cols-2 gap-12">
      <div class="space-y-8">
        <div class="flex items-start space-x-4">
          <Mail className="text-primary flex-shrink-0" size={24} />
          <div>
            <h3 class="text-white font-semibold mb-1">Email</h3>
            <p class="text-gray-400">hopsiedev@gmail.com.com</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-4">
          <Phone className="text-primary flex-shrink-0" size={24} />
          <div>
            <h3 class="text-white font-semibold mb-1">Teléfono</h3>
            <p class="text-gray-400">+1 849 658 9687</p>
          </div>
        </div>
        
        <div class="flex items-start space-x-4">
          <MapPin className="text-primary flex-shrink-0" size={24} />
          <div>
            <h3 class="text-white font-semibold mb-1">Ubicación</h3>
            <p class="text-gray-400">Mao Valverde, República Dominicana</p>
          </div>
        </div>
      </div>
      
      <form class="space-y-6">
        <div>
          <input 
            type="text" 
            placeholder="Nombre"
            class="w-full px-4 py-3 bg-black/50 border border-primary/20 rounded-lg focus:outline-none focus:border-primary text-white"
          />
        </div>
        <div>
          <input 
            type="email" 
            placeholder="Email"
            class="w-full px-4 py-3 bg-black/50 border border-primary/20 rounded-lg focus:outline-none focus:border-primary text-white"
          />
        </div>
        <div>
          <textarea 
            placeholder="Mensaje"
            rows={4}
            class="w-full px-4 py-3 bg-black/50 border border-primary/20 rounded-lg focus:outline-none focus:border-primary text-white resize-none"
          ></textarea>
        </div>
        <button class="w-full bg-primary hover:bg-primary-dark text-white py-3 rounded-lg transition-colors flex items-center justify-center space-x-2">
          <span>Enviar Mensaje</span>
          <Send size={18} />
        </button>
      </form>
    </div>
  </div>
</section>